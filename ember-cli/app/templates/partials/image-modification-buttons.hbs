{{#if session.isAuthenticated}}
    {{#if image.directory.inTrash}}
        <button {{action 'revertImage' image}}
            {{bind-attr disabled="image.modificationPending" class=":revert :button image.modificationPending:inactive"}}></button>
    {{else}}
        <button {{action 'removeImage' image}}
            {{bind-attr disabled="image.modificationPending" class=":thrash :button image.modificationPending:inactive"}}></button>
    {{/if}}

    <button {{action 'rotateImage' image}}
        {{ bind-attr disabled="image.modificationPending" class="image.orientation :button image.modificationPending:inactive" }}></button>
{{/if}}