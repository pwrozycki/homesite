<div class="image-overlay">
    <a {{action 'prevImage'}}
        {{bind-attr disabled="isFirst" class=":leftArrow :button isFirst:inactive"}}></a>

    <a {{action 'exitPreview' model}} class="upArrow button"></a>

    <a {{action 'nextImage'}}
        {{bind-attr disabled="isLast" class=":rightArrow :button isLast:inactive"}}></a>

    {{#with model as image}}
        {{ partial 'partials/image-modification-buttons' }}
    {{/with}}

</div>

<div id="preview-image">
    <img {{bind-attr src=preview}}>
    <span></span>
</div>