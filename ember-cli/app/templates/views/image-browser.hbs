<div id="directorybar">
    {{#each model.parentDirectories}}
        {{#link-to 'gallery.browse' path}}{{ name }}{{/link-to}}
        &gt;
    {{/each}}
</div>

<div id="dirlisting">
    <ul>
        {{#each model.subdirectories}}
            <li>
                {{#link-to 'gallery.browse' path}}{{name}}{{/link-to}}
            </li>
        {{/each}}
    </ul>
</div>

<div id="images">
    {{#each image in model.images}}
        <div class="thumbnail-container">
            <img class="lazy" {{bind-attr data-original=image.thumbnail data-name=image.name}}{{action "showPreview" image}}/>

            <div class="image-overlay">
                {{#if image.directory.inTrash}}
                    <button class="revert" {{action "revertImage" image}}></button>
                {{else}}
                    <button class="thrash" {{action "removeImage" image}}></button>
                {{/if}}
                <button {{action "rotateImage" image}}{{bind-attr class=image.orientation}}></button>
            </div>
            <span>{{ image.name }}</span>
        </div>

    {{/each}}
</div>