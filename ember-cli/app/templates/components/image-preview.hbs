<div class="image-overlay">
    <button {{action 'left'}} {{bind-attr class=":leftArrow previewImage.isFirst:inactive"}}></button>
    <button {{action 'up'}} class="upArrow"></button>
    <button {{action 'right'}} {{bind-attr class=":rightArrow previewImage.isLast:inactive"}}></button>
    {{#if previewImage.directory.inTrash}}
        <button {{action 'undo' previewImage}} class="revert"></button>
    {{else}}
        <button {{action 'remove' previewImage}} class="thrash"></button>
    {{/if}}
    <button {{action 'rotate' previewImage}} {{ bind-attr class="previewImage.orientation" }}></button>
</div>
<div id="preview-image">
    <img {{bind-attr src=previewImage.preview}}>
</div>